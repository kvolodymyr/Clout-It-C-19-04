@{
  ViewBag.Title = "Login2";
}

<h1>Login</h1>
@using (Html.BeginForm("Login"))
{
  <table cellpadding="3">
    <tr>
      <td>User Name :</td>
      <td>
        <input type="text" name="UserName" />
      </td>
    </tr>
    <tr>
      <td>Password :</td>
      <td>
        <input type="password" name="Password" />
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <input type="submit" value="Login">
      </td>
    </tr>
    <tr>
      <td colspan="2"><a href="Register">New user?</a></td>
    </tr>
  </table>
}
