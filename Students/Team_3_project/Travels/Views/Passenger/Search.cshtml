<!DOCTYPE html>

<html>
<head>

    @Styles.Render("~/Content/StyleSheetLogin.css")
    <link href='https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Passenger</title>
</head>
<body>
    <div class="fullwidth-bg">
        <div class="video-layer">
        </div>
        <video loop muted autoplay class="fullscreen-bg__video">
            <source src="/Content/video.mp4" type="video/mp4">
            <source src="/Content/video.webm" type="video/webm">
        </video>
    </div>
    <div class="container-view-routes">
        <h1>ViewBag.Success</h1>
        <h1>Доступные Маршруты</h1>
        <div>
            <table>
                <tr>
                    <th><p>Водитель</p></th>
                    <th><p>Маршрут</p></th>
                    <th><p>Выбор</p></th>
                </tr>
                @if (ViewBag.Result.Count != 0)
                {
                foreach (var driver in ViewBag.Result)
                {
                    <tr>
                        <td><p>@driver.UserName</p></td>
                        <td><p>@driver.TravelRoute</p></td>
                        <td><input type="radio" name="radioButton" style="width: 20px; height: 20px;"></td>
                    </tr>
                }
                }
                else
                {
                    <p>@ViewBag.Message</p>
                }
            </table>
        </div>

        <div>
            <form method="post" action="">
                <input type="text" name="searchRequset" placeholder="Введите точку посадки из выбранного маршрута">
                <div class="send-request">
                    <input type="submit" value="Отправить заявку на выбранный маршрут" />
                    <!--<a href="Search">Отправить заявку на выбранный маршрут</a>-->
                </div>
            </form>
            <div>
                @ViewBag.Success
            </div>
    </div>

    @Scripts.Render("~/Scripts/jquery-3.4.1.min.js")
    @Scripts.Render("~/Scripts/gsap.min.js")
    @Scripts.Render("~/Scripts/JavaScriptLogin.js")
</body>
</html>
